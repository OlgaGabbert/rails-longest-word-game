<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<div class="container">
  <h1>New Game</h1>
  <p> <% @letters.each do |letter| %>
    <%= letter %>
  <% end %></p>

  <p>What is the longest word you can find?</p>
  <form class="form-inline" action="/score" method ="post">
    <div class="form-group mx-sm-3 mb-2">
      <label for="input" class="sr-only">Your guess</label>
      <input type="text" class="form-control" id="input" name="game">
    </div>
    <input class="btn btn-light mb-2" type="submit" value="Play">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>
</div>

